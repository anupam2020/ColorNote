<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_login_new"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more_TopRelative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/more_textNotty"
            android:text="ColorNote"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:fontFamily="@font/aladin"
            android:gravity="center"/>

        <com.hanks.htextview.scale.ScaleTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_textNotty"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text=""
            android:id="@+id/more_text"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            />

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:src="@drawable/about"
                android:id="@+id/more_about"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:src="@drawable/logout"
                android:id="@+id/more_logout"
                android:layout_below="@id/more_about"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:src="@drawable/delete"
                android:id="@+id/more_delete"
                android:layout_below="@id/more_logout"/>


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>