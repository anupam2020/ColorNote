<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    tools:context=".AboutUs">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_login_new"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/about_Back"
        android:src="@drawable/ic_outline_arrow_back_24"
        android:tint="@color/white"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_TopRelative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_textNotty"
            android:text="ColorNote"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:fontFamily="@font/aladin"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_textDescription"
            android:layout_below="@id/login_textNotty"
            android:text="Create your memories"
            android:textSize="20dp"
            android:textColor="#80FFFFFF"
            android:fontFamily="@font/aladin"
            android:gravity="center"/>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/me2"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        android:layout_above="@id/aboutUs_Relative"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/aboutUs_Relative">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_Develop"
            android:text="Developed By: Anupam Basak"
            android:textSize="25dp"
            android:fontFamily="@font/aladin"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_contact"
            android:text="Contact No.: 6294376055"
            android:layout_below="@+id/about_Develop"
            android:textSize="21dp"
            android:fontFamily="@font/aladin"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textIsSelectable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_marquee"
            android:layout_below="@id/about_contact"
            android:text="This is a simple notepad app- ColorNote. Thank You for using our product!"
            android:textSize="18dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:fontFamily="@font/aladin"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

</RelativeLayout>